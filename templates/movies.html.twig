{% extends "layout.html.twig" %}

{% block title 'Films - Get Inspired' %}
    
{% block stylesheets %}
    {{ parent() }} {# reprend le contenu du bloc parent #}
    <link href="{{asset('css/movies.css')}}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block content %}
    <div class="container">
        <h1>Films tri√©s par genre</h1>
        <div class="row">
            <div class="col-sm-2">
                Filtres
            </div>
            <div class="col-sm-10">
                <div class="row">
                    {% set compteur = 0 %}
                    {% for movie in movies %}
                        {% if(compteur%5 == 0) %}
                            </div><div class="row">                        
                        {% endif %}
                                <div class="col-xs-2">
                                    <a href=""><img src="{{ movie.poster }}"></a>
                                </div>
                            
                            {% set compteur = compteur + 1 %}
                    {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
