{% extends "layout.html.twig" %}

{% block title 'Box Register - ' %}
    
{% block content %}
    <div class="container">
            <div class="row">
                <div class="col-sm-offset-3 col-sm-6">
                    {% if box.id is null %}
                        <h1>Ajouter une box</h1>
                    {% else %}
                        <h1>Modification de la box</h1>
                    {% endif %}
                    <form method="post">
                        
                        <div class="form-group">
                            <label>Titre</label>
                            <input type="text" id="title" name="title" value="{{ box.title }}" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Contenu</label>
                            <textarea name="content" id="content" rows="7" cols="66" resize="vertical">{{ box.content }}</textarea>
                        </div>

                        <div class="form-group">
                            <label>Prix</label>
                            <input type="text" name="price" value="{{ box.price }}" class="form-control">
                        </div>        

                        <div class="form-group">
                            <label>Stock</label>
                            <input type="text" name="stock" value="{{ box.stock }}" class="form-control">
                        </div>        

                        <button type="submit" class="btn btn-primary">Enregistrer</button>                       
        
                    </form>
                </div>  
            </div>
        </div>
{% endblock  %}
