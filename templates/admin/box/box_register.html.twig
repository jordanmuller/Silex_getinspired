{% extends "layout.html.twig" %}

{% block title 'Box Register' %}
    
{% block content %}
    <div class="container">
        <h1>Ajouter une box</h1>    
        
        <form method="post">

            <div class="form-group">
                <input type="hidden" id="id_box" name="id_box" value="{# {{ box.id_box }} #}" class="form-control">
            </div>

            <div class="form-group">
                <label>Titre</label>
                <input type="text" id="title" name="title" value="{{ box.title }}" class="form-control">
            </div>

            <div class="form-group">
                <label>Contenu</label>
                <textarea name="content" id="content" rows="7" cols="100">{{ box.content }}</textarea>
            </div>

             <div class="form-group">
                <label>Prix</label>
                <input type="text" name="price" value="{{ box.price }}" class="form-control">
            </div>        

            <button type="submit" class="btn btn-primary">Enregistrer</button>

        </form>
    </div>
            
{% endblock  %}
