{% extends "layout.html.twig" %}

{% block title 'Box Register - ' %}
    
{% block content %}
    <div class="container">
            <div class="row">
                {% if box.id is null %}
                <h1 style="text-align:center;">Ajouter une box</h1><hr/>
                {% else %}
                <h1 style="text-align:center;">Modification de la box</h1><hr/>
                {% endif %}
                <div class="col-sm-offset-3 col-sm-6">
                    
                    <form method="post">
                        
                        <div class="form-group">
                            <label>Titre</label>
                            <input type="text" id="title" name="title" value="{{ box.title }}" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Contenu</label>
                            <textarea name="content" id="content" rows="7" cols="66" resize="vertical">{{ box.content }}</textarea>
                        </div>
                        <div class="form-group">
                            <label>Film 1</label>
                            <select id="movie" name="movie[]" class="form-control">
                                <option value="" disabled selected>Choisissez un film</option>
                                {% for movie in movies %}
                                    <option value="{{ movie.id }}" {% if boxMovies[0] is defined and movie.id == boxMovies[0].id %}selected{% endif %}>{{ movie.title }}</option> 
                                {% endfor %}
                            </select>
                        </div> 
                        <div class="form-group">
                            <label>Film 2</label>
                            <select id="movie" name="movie[]" class="form-control">
                                <option value="" disabled selected>Choisissez un film</option>
                                {% for movie in movies %}
                                    <option value="{{ movie.id }}" {% if boxMovies[1] is defined and movie.id == boxMovies[1].id  %}selected{% endif %}>{{ movie.title }}</option> 
                                {% endfor %}
                            </select>
                        </div> 
                        <div class="form-group">
                            <label>Film 3</label>
                            <select id="movie" name="movie[]" class="form-control">
                                <option value="" disabled selected>Choisissez un film</option>
                                {% for movie in movies %}
                                    <option value="{{ movie.id }}" {% if boxMovies[2] is defined and movie.id == boxMovies[2].id  %}selected{% endif %}>{{ movie.title }}</option> 
                                {% endfor %}
                            </select>
                        </div> 
                        
                        <div class="form-group">
                            <label>Prix</label>
                            <input type="text" id="price" name="price" value="{{ box.price }}" class="form-control">
                        </div>        

                        <div class="form-group">
                            <label>Stock</label>
                            <input type="text" id="stock" name="stock" value="{{ box.stock }}" class="form-control">
                        </div>        

                        <button type="submit" class="btn btn-primary form-control"><span class="glyphicon glyphicon-off" aria-hidden="true"></span> Enregistrer</button>
        
                    </form>
                </div>  
            </div>
        </div>
{% endblock  %}
