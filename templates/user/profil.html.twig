{% extends "layout.html.twig" %}

{% block title 'Profile' %}
    
{% block content %}

    <div class="container">
        <div class="starter-template">
            <h1 style="text-align:center;"><span class="glyphicon glyphicon-user" style="margin-right: 20px;"></span>Profil</h1>
        </div>
    </div><!-- /.container -->

    <div class="container">
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6">
                <div class="form-group">
                    <ul class="list-group" >
                        <li class="list-group-item active" style="text-align: center; margin: 1px;"><h4>Vos informations</h4></li>
                        <li class="list-group-item active" style="padding: 20px; margin: 1px;">Pseudo : {{ user.pseudo }}</li>
                        <li class="list-group-item active" style="padding: 20px; margin: 1px;">Nom : {{ user.lastname }}</li>
                        <li class="list-group-item active" style="padding: 20px; margin: 1px;">Prenom : {{ user.firstname }}</li>
                        <li class="list-group-item active" style="padding: 20px; margin: 1px;">Civilité : {{ user.civility }}</span></li><br/>
                        <a href="{{ path("user_profile_delete") }}">Voulez-vous vous désinscrire de GetInspired?</a>
                    </ul>
                </div>
            </div>
        </div>                    
    </div><!-- /.container -->		

{% endblock  %}