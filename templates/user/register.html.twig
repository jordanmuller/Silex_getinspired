{% extends "layout.html.twig" %}

{% block title 'Inscription' %}
    
{% block content %}
    <h1>Inscription</h1>
    
    <form method="post">
        
        <div class="form-group">
            <input type="hidden" id="id_user" name="id_user" value="{{ user.id_user }}" class="form-control">
        </div>
        
        <div class="form-group align-center"
            <div class="radio radio-info radio-inline">
                <input type="radio" id="m" name="civility" value="m" {% if user.civility == 'm' %}checked{% endif %}>
                <label for="m">M</label>

                <input type="radio" id="mme" name="civility" value="mme"  {% if user.civility == 'mme' %}checked{% endif %}>
                <label for="mme">Mme</label>

                <input type="radio" id="mlle" name="civility" value="mlle"  {% if user.civility == 'mlle' %}checked{% endif %}>
                <label for="mlle">Mlle</label>
            </div>
        </div>

        <div class="form-group">
            <label>Nom</label>
            <input type="text" name="lastname" value="{{ user.lastname }}" class="form-control">
        </div>
        
         <div class="form-group">
            <label>Prenom</label>
            <input type="text" name="firstname" value="{{ user.firstname }}" class="form-control">
        </div>
        
        <div class="form-group">
            <label>Pseudo</label>
            <input type="text" name="pseudo" value="{{ user.pseudo }}" class="form-control">
        </div>
        
         <div class="form-group">
            <label>Email</label>
            <input type="text" name="email" value="{{ user.email }}" class="form-control">
        </div>
        
        <div class="row">
            <div class="form-group col-xs-3">
                <label for="birthdate">Date de naissance</label>
            </div>
            
            <div class="form-group col-xs-3">
               <select name="birthdate_day" id="birthdate_day" class="required form-control" placeholder="Jour" value="{{ user.birthdate_day }}"></select> 
            </div>
            
            <div class="form-group col-xs-3">
                <select name="birthdate_month" id="birthdate_month" class="required form-control" placeholder="Mois" value="{{ user.birthdate_month }}"></select>
            </div>
            
            <div class="form-group col-xs-3">
                <select name="birthdate_year" id="birthdate_year" class="required form-control" placeholder="Année" value="{{ user.birthdate_year }}"></select>
            </div>
        </div>

         <div class="form-group">
            <label>Mot de passe</label>
            <input type="password" name="password" value="{{ user.password }}" class="form-control">
        </div>
        
         <div class="form-group">
            <label>Confirmation mot de passe</label>
            <input type="password" name="password_confirm" value="{{ user.password }}" class="form-control">
        </div>
        
        <div class="form-group checkbox">
            <input type="checkbox" name="cgu" id="cgu" value="">
            <label for="cgu">J'accepte les</label><a href="http://www.vodkaster.com/conditions-generales-d-utilisation">Conditions générales de vente</a>
        </div>
        
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        
    </form>
            
{% endblock  %}