{% extends "layout.html.twig" %}

{% block title 'Inscription' %}
    
{% block content %}
    

        <div class="container">
            <div class="row">
                <div class="col-sm-offset-3 col-sm-6">
                    <h1 style="text-align: center;">Inscription</h1><hr/> 
                    <form method="post">
            
                        <div class="center-block">
                            <div class="radio radio-info radio-inline" style="margin-top: 0; padding-right: 10px; ">
                                <input type="radio" id="m" name="civility" value="m" style="padding-left: 5px;"{% if user.civility == 'm' %}checked{% endif %}>
                                <label for="m">M &nbsp</label>
                            </div>
                            <div class="radio radio-info radio-inline" style="margin-top: 0; padding-right: 10px;">
                                <input type="radio" id="mme" name="civility" value="mme" style="padding-left: 5px;" {% if user.civility == 'mme' %}checked{% endif %}>
                                <label for="mme">Mme &nbsp</label>
                            </div>
                            <div class="radio radio-info radio-inline" style="margin-top: 0; padding-right: 10px;">
                                <input type="radio" id="mlle" name="civility" value="mlle" style="padding-left: 5px;" {% if user.civility == 'mlle' %}checked{% endif %}>
                                <label for="mlle">Mlle &nbsp</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Nom</label>
                            <input type="text" name="lastname" value="{{ user.lastname }}" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Prenom</label>
                            <input type="text" name="firstname" value="{{ user.firstname }}" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Pseudo</label>
                            <input type="text" name="pseudo" value="{{ user.pseudo }}" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" name="email" value="{{ user.email }}" class="form-control">
                        </div>

                        <div class="row">
                            <div class="form-group col-xs-3">
                                <label for="birthdate">Date de naissance</label>
                            </div>

                            <div class="form-group col-xs-3">
                               <select name="birthdate_day" id="birthdate_day" class="required form-control" placeholder="Jour">
                                   <option value="">Jour</option> 
                                {% for nb in 1..31 %}
                                    <option value="{{ '%02d'|format(nb) }}" {% if birthdate_day == nb %}selected{% endif %}>{{ '%02d'|format(nb) }}</option> 
                                {% endfor %} 

                               </select> 
                            </div>
                        

                            <div class="form-group col-xs-3">
                                <select name="birthdate_month" id="birthdate_month" class="required form-control" placeholder="Mois">
                                    <option value="">Mois</option>    
                                {% for nb in 1..12 %}
                                    <option value="{{ '%02d'|format(nb) }}" {% if birthdate_month == nb %}selected{% endif %}>{{ '%02d'|format(nb) }}</option> 
                                {% endfor %} 

                                </select>
                            </div>

                            <div class="form-group col-xs-3">

                                <select name="birthdate_year" id="birthdate_year" class="required form-control" placeholder="Année">
                                    <option value="">Année</option> 
                                {% for nb in 2017..1900  %}
                                <option value="{{ nb }}" {% if birthdate_year == nb %}selected{% endif %}>{{ nb }}</option> 
                                {% endfor %} 

                                </select>    

                            </div>
                        </div>

                        <div class="form-group">
                            <input type="hidden" name="password_confirm" value="{{ user.role }}" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Mot de passe</label>
                            <input type="password" name="password" value="{{ user.password }}" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Confirmation mot de passe</label>
                            <input type="password" name="password_confirm" value="{{ user.password }}" class="form-control">
                        </div>

                        <div class="form-group checkbox col-sm-offset-2 col-sm-8">
                            <input type="checkbox" name="cgu" id="cgu" >
                            <label>J'accepte les</label><a href="http://www.vodkaster.com/conditions-generales-d-utilisation"> &nbsp Conditions générales de vente</a>
                        </div>

                        <button type="submit" class="btn btn-primary form-control"><span class="glyphicon glyphicon-off" aria-hidden="true"></span> Enregistrer</button>
        
                    </form>
                </div>  
            </div>
        </div>           
                        
            
{% endblock  %}