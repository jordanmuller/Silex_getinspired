{% extends "layout.html.twig" %}

{% block title 'Listes - Get Inspired' %}

{% block stylesheets %}
    {{ parent() }} {# reprend le contenu du bloc parent #}
{#    <link href="{{asset('css/movies.css')}}" rel="stylesheet" type="text/css" />#}
{% endblock %}

{% block content %}
    <div class="container">
            <div class="row">
                <div class="col-sm-offset-3 col-sm-6">
                    {% if liste.id is null %}
                        <h1>Ajouter une liste</h1>
                    {% else %}
                        <h1>Modification de la liste</h1>
                    {% endif %}
                    <form method="post">
                        
                        <div class="form-group">
                            <label>Titre</label>
                            <input type="text" id="title" name="title" value="{{ liste.title }}" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <textarea name="desciption" id="content" rows="7" cols="66" resize="vertical">{{ liste.description }}</textarea>
                        </div>

                        

                        <button type="submit" class="btn btn-primary">Enregistrer</button>                       
        
                    </form>
                </div>  
            </div>
        </div>
{% endblock %}