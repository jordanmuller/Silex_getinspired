                {% for movie in movies %}
                    <div class="col-sm-2">
                        <img src="{{ movie.poster }}" alt="icone du film" class="img-responsive" style="height:250px; width:175px;">
                        <h3>{{ movie.title }}</h3>
                        <p><span class="glyphicon glyphicon-star" style="font-size: 30px; margin-top: 10px; "></span> {{ movie.avg }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>            
    
    <section class="visual_2">
        <div class="container">        
            <h2 class="text-center">Les dernières Inspirations</h2>
            <div class="row">
                
                {% for review in reviews %}
                    {% if review.content != 'Le commentaire à été supprimé par l\'administrateur du site' %}
                    <div class="col-sm-3">
                        <div class="comment-main-level">                                    
                            <!--Container du comment -->
                            <div class="comment-box">
                                <div class="comment-head">
                                    <p class="comment-name">{{ review.Userpseudo }}</p>
                                    <span>{{ review.date_enregistrement|date('d/m/Y H:i') }}</span>                                            
                                </div>
                                <div class="comment-content">                                          
